# Object Properties #
#####################



###################
# Data Properties #
###################
# link to data values (while ObjectProperties link to other "individuals" e.g. that are subjects of a triple?

# aka hasSop
emobon:sop   
  rdf:type              owl:DataProperty ;
  rdfs:isDefinedBy      <{{baseuri}}/{{name}}>;
  rdfs:comment          "A set of instructions that describe step-by-step the processes that must be taken to properly perform a routine activity."@en ;
  rdfs:label            "Standard operating procedure"@en ;
  rdfs:range             sosa:Procedure ;
  rdfs:domain            emobon:EnvironmentalMeasurement, emobon:MaterialSample .

emobon:measurementType 
  rdf:type              owl:DataProperty ;
  rdfs:isDefinedBy      <{{baseuri}}/{{name}}>;
  rdfs:comment          "A type of measurement"@en ;
  rdfs:label            "Measurement type"@en ;
  rdfs:range             skos:Concept ;
  rdfs:domain            emobon:EnvironmentalMeasurement .

emobon:tidalStage
  rdf:type              owl:DataProperty ;
  rdfs:isDefinedBy      <{{baseuri}}/{{name}}>;
  rdfs:comment          "The stage of the tide during an EMO BON sampling event (low_tide, ebb_tide, flood_tide, high_tide)."@en ;
  rdfs:label            "Tidal stage"@en ;
  rdfs:domain           skos:Concept ;
  rdfs:range            emobon:Event .

emobon:low_tide_stage
  rdf:type              skos:Concept ;
  rdfs:isDefinedBy      <{{baseuri}}/{{name}}>;
  skos:note             "The stage of the tide during an EMO BON sampling event when the water level is at its lowest."@en ;
  skos:prefLabel        "Low tide"@en .

emobon:ebb_tide_stage
  rdf:type              skos:Concept ;
  rdfs:isDefinedBy      <{{baseuri}}/{{name}}>;
  skos:note             "The stage of the tide during an EMO BON sampling event when the water level is falling."@en ;
  skos:prefLabel        "Ebb tide"@en .

emobon:flood_tide_stage
  rdf:type              skos:Concept ;
  rdfs:isDefinedBy      <{{baseuri}}/{{name}}>;
  skos:note             "The stage of the tide during an EMO BON sampling event when the water level is rising."@en ;
  skos:prefLabel        "Flood tide"@en .

emobon:high_tide_stage
  rdf:type              skos:Concept ;
  rdfs:isDefinedBy      <{{baseuri}}/{{name}}>;
  skos:note             "The stage of the tide during an EMO BON sampling event when the water level is at its highest."@en ;
  skos:prefLabel        "High tide"@en .

emobon:sampleSize
  rdf:type              owl:DataProperty ;
  rdfs:isDefinedBy      <{{baseuri}}/{{name}}>;
  rdfs:comment          "The size (quantity, volume, mass, etc) of a material replicate"@en ;
  rdfs:label            "Sample size"@en ;
  rdfs:domainIncludes   schema:Thing ;
  rdfs:rangeIncludes    emobon:MaterialReplicate .
